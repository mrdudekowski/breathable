# EditorConfig для обеспечения единообразной кодировки и форматирования
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,jsx,ts,tsx,json,css,scss,md}]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
# Важно: UTF-8 БЕЗ BOM для markdown файлов

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab


